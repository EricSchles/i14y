{
  "template": "*-i14y-documents-*",
  "settings": {
    "analysis": {
      "filter": {
        "de_stem_filter": {
          "type": "stemmer",
          "name": "minimal_german"
        },
        "en_stem_filter": {
          "type": "stemmer",
          "name": "minimal_english"
        },
        "es_stem_filter": {
          "type": "stemmer",
          "name": "light_spanish"
        },
        "fi_stem_filter": {
          "type": "stemmer",
          "name": "light_finnish"
        },
        "fr_stem_filter": {
          "type": "stemmer",
          "name": "minimal_french"
        },
        "hu_stem_filter": {
          "type": "stemmer",
          "name": "light_hungarian"
        },
        "it_stem_filter": {
          "type": "stemmer",
          "name": "light_italian"
        },
        "ja_pos_filter": {
          "type": "kuromoji_part_of_speech",
          "stoptags": [
            "\\u52a9\\u8a5e-\\u683c\\u52a9\\u8a5e-\\u4e00\\u822c",
            "\\u52a9\\u8a5e-\\u7d42\\u52a9\\u8a5e"
          ]
        },
        "pt_stem_filter": {
          "type": "stemmer",
          "name": "minimal_portuguese"
        },
        "ru_stem_filter": {
          "type": "stemmer",
          "name": "light_russian"
        },
        "sv_stem_filter": {
          "type": "stemmer",
          "name": "light_swedish"
        }
      },
      "analyzer": {
        "de_analyzer": {
          "type": "custom",
          "filter": [
            "icu_normalizer",
            "de_stem_filter",
            "icu_folding"
          ],
          "tokenizer": "icu_tokenizer"
        },
        "en_analyzer": {
          "type": "custom",
          "filter": [
            "icu_normalizer",
            "en_stem_filter",
            "icu_folding"
          ],
          "tokenizer": "icu_tokenizer"
        },
        "es_analyzer": {
          "type": "custom",
          "filter": [
            "icu_normalizer",
            "es_stem_filter",
            "icu_folding"
          ],
          "tokenizer": "icu_tokenizer"
        },
        "fi_analyzer": {
          "type": "custom",
          "filter": [
            "icu_normalizer",
            "fi_stem_filter",
            "icu_folding"
          ],
          "tokenizer": "icu_tokenizer"
        },
        "fr_analyzer": {
          "type": "custom",
          "filter": [
            "icu_normalizer",
            "elision",
            "fr_stem_filter",
            "icu_folding"
          ],
          "tokenizer": "icu_tokenizer"
        },
        "hu_analyzer": {
          "type": "custom",
          "filter": [
            "icu_normalizer",
            "hu_stem_filter",
            "icu_folding"
          ],
          "tokenizer": "icu_tokenizer"
        },
        "it_analyzer": {
          "type": "custom",
          "filter": [
            "icu_normalizer",
            "it_stem_filter",
            "icu_folding"
          ],
          "tokenizer": "icu_tokenizer"
        },
        "ja_analyzer": {
          "type": "custom",
          "filter": [
            "kuromoji_baseform",
            "ja_pos_filter",
            "icu_normalizer",
            "icu_folding",
            "cjk_width"
          ],
          "tokenizer": "kuromoji_tokenizer"
        },
        "ko_analyzer": {
          "type": "cjk",
          "filter": []
        },
        "pt_analyzer": {
          "type": "custom",
          "filter": [
            "icu_normalizer",
            "pt_stem_filter",
            "icu_folding"
          ],
          "tokenizer": "icu_tokenizer"
        },
        "ru_analyzer": {
          "type": "custom",
          "filter": [
            "icu_normalizer",
            "ru_stem_filter",
            "icu_folding"
          ],
          "tokenizer": "icu_tokenizer"
        },
        "sv_analyzer": {
          "type": "custom",
          "filter": [
            "icu_normalizer",
            "sv_stem_filter",
            "icu_folding"
          ],
          "tokenizer": "icu_tokenizer"
        },
        "zh_analyzer": {
          "type": "custom",
          "filter": [
            "smartcn_word",
            "icu_normalizer",
            "icu_folding"
          ],
          "tokenizer": "smartcn_sentence"
        },
        "default": {
          "type": "custom",
          "filter": [
            "icu_normalizer",
            "icu_folding"
          ],
          "tokenizer": "icu_tokenizer"
        }
      },
      "tokenizer": {
        "kuromoji": {
          "type": "kuromoji_tokenizer",
          "mode": "search"
        }
      }
    }
  },
  "mappings": {
    "document": {
      "dynamic_templates": [
        {
          "es": {
            "match": "*_es",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "es_analyzer"
            }
          }
        },
        {
          "en": {
            "match": "*_en",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "en_analyzer"
            }
          }
        },
        {
          "de": {
            "match": "*_de",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "de_analyzer"
            }
          }
        },
        {
          "fi": {
            "match": "*_fi",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "fi_analyzer"
            }
          }
        },
        {
          "fr": {
            "match": "*_fr",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "fr_analyzer"
            }
          }
        },
        {
          "hu": {
            "match": "*_hu",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "hu_analyzer"
            }
          }
        },
        {
          "it": {
            "match": "*_it",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "it_analyzer"
            }
          }
        },
        {
          "ja": {
            "match": "*_ja",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "ja_analyzer"
            }
          }
        },
        {
          "ko": {
            "match": "*_ko",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "ko_analyzer"
            }
          }
        },
        {
          "pt": {
            "match": "*_pt",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "pt_analyzer"
            }
          }
        },
        {
          "ru": {
            "match": "*_ru",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "ru_analyzer"
            }
          }
        },
        {
          "sv": {
            "match": "*_sv",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "sv_analyzer"
            }
          }
        },
        {
          "zh": {
            "match": "*_zh",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "analyzer": "zh_analyzer"
            }
          }
        },
        {
          "string_fields": {
            "mapping": {
              "analyzer": "default",
              "type": "string"
            },
            "match_mapping_type": "string",
            "match": "*"
          }
        }
      ],
      "properties": {
        "created": {
          "type": "date"
        },
        "updated": {
          "type": "date"
        },
        "document_id": {
          "index": "not_analyzed",
          "type": "string"
        },
        "language": {
          "index": "not_analyzed",
          "type": "string"
        },
        "path": {
          "index": "not_analyzed",
          "type": "string"
        },
        "promote": {
          "type": "boolean"
        }
      },
      "_all": {
        "enabled": false
      }
    }
  }
}